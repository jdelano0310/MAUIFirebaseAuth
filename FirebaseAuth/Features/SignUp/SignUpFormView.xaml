<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirebaseAuth.Features.SignUp.SignUpFormView">
    <VerticalStackLayout>
        <VerticalStackLayout>
            <Label FontAttributes="Bold" Text="Email" />
            <Entry Margin="0,2,0,0" Text="{Binding Email}" />
        </VerticalStackLayout>

        <VerticalStackLayout Margin="0,10,0,0">
            <Label FontAttributes="Bold" Text="Password" />
            <Entry Margin="0,2,0,0" Text="{Binding Password}" IsPassword="True" />
        </VerticalStackLayout>

        <VerticalStackLayout  Margin="0,10,0,0">
            <Label FontAttributes="Bold" Text="Confirm Password"/>
            <Entry Margin="0,2,0,0" Text="{Binding ConfirmPassword}" IsPassword="True"/>
        </VerticalStackLayout>

        <Button  Margin="0,25,0,0" Command="{Binding SignUpCommand}" Text="Sign Up" />
    </VerticalStackLayout>
</ContentView>
