<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FirebaseAuth.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FirebaseAuth"
    xmlns:signup="clr-namespace:FirebaseAuth.Pages.SignUp"
    xmlns:signin="clr-namespace:FirebaseAuth.Pages.SignIn"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Sign In"
        ContentTemplate="{DataTemplate signin:SignInView}"
        Route="SignIn" />
    
    <ShellContent
        Title="Sign Up"
        ContentTemplate="{DataTemplate signup:SignUpView}"
        Route="SignUp" />

</Shell>
