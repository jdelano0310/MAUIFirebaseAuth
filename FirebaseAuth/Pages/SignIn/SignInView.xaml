<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirebaseAuth.Pages.SignIn.SignInView"
             xmlns:signinfeature="clr-namespace:FirebaseAuth.Features.SignIn"
             Title="SignInView">
    <ScrollView>
        <VerticalStackLayout Padding="25" MaximumWidthRequest="300">
            <Label FontSize="Large" Text="Sign In" />
            <signinfeature:SignInFormView Margin="0,25,0,0" BindingContext="{Binding SignInFormViewModel}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>