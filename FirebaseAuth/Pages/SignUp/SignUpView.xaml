<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirebaseAuth.Pages.SignUp.SignUpView"
             xmlns:signupfeature="clr-namespace:FirebaseAuth.Features.SignUp"
             Title="SignUpView">
    <ScrollView>
        <VerticalStackLayout Padding="25" MaximumWidthRequest="500">
            <Label FontSize="Large" Text="Sign Up" />
            <signupfeature:SignUpFormView Margin="0,25,0,0" BindingContext="{Binding SignUpFormViewModel}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>